<h2 class="text-center">Extra info</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      {{#if user.imgPath}}
        <img src="{{user.imgPath}}" width="190" height="190">
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
        <p>Specialty: {{user.specialty}}</p>
    </div>
    <div class="col-md-3">
      <p>Username: {{user.username}}</p>
    </div>    
    <div class="col-md-3">
        <p>Role: {{user.role}}</p>
    </div>
    <div class="col-md-2">
        <p>Coins: {{user.coins}}</p>
    </div>
  <div class="row">
    <div class="col-lg-12">  
      <p>{{this.about}}</p>
    </div>
  </div>
  </div>
    
</div>


<form action="/scout/{{user.id}}" class="text-center" method="post">
  <input type="text" style="display:none" name="friendReq" value="{{user.id}}">
  <button type="submit">Send Request!</button>
</form>


  {{#each user.experiences}}
  <div class="row seperate">
    <div class="col-lg-12 text-center"><h3>{{this.title}}</h3></div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="{{this.imgPath}}" width="700" height="600" class="d-inline-block align-top" alt="">
    </div>
  </div>  
  
  <div class="row">
    {{#each this.links}}
    <div class="col-lg-12 text-center">
      <a class="" href="{{this}}">{{this}}</a>
    </div> 
  </div>
    {{/each}} 
  <div class="row">
    <div class="col-lg-12 text-center">
      <p>{{this.description}}</p>
    </div>
  </div>  
  {{/each}}   

<form class="text-center">
  <input type="button" value="Go back!" onclick="history.back()">
</form>
