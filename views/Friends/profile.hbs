<h2>Extra info</h2>
<div>
  <p>Username: {{user.username}}</p>
  <p>Specialty: {{user.specialty}}</p>
  <p>Role: {{user.role}}</p>
  <p>Coins: {{user.coins}}</p>
  <ul> Friends:
    {{#each user.friends}}
    <li>{{this.username}}</li>
    {{/each}}
  </ul>
  <p>{{this.about}}</p>
</div>

  {{#each user.experiences}}
  <div class="row">
    <div class="col-lg-12 text-center"><h3>{{this.title}}</h3></div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="{{this.imgPath}}" width="700" height="600" class="d-inline-block align-top" alt="">
    </div>
  </div>  
  
  <div class="row">
    {{#each this.links}}
    <div class="col-lg-12 text-center">
      <a class="" href="{{this}}">{{this}}</a>
    </div> 
    {{/each}} 
  {{/each}}  

